{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.php"
    },
    {
      "handle": "filesystem"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "@app_key",
    "DB_CONNECTION": "@db_connection",
    "DB_HOST": "@db_host",
    "DB_PORT": "@db_port",
    "DB_DATABASE": "@db_database",
    "DB_USERNAME": "@db_username",
    "DB_PASSWORD": "@db_password"
  }
}
